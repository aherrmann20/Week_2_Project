<h2>Cases</h2>
<% @drug.comments.each do |comment| %>
	<p>
		<strong>EMT:</strong>
		<%= comment.commenter %>
	</p>

	<p>
		<strong>Patient Presentation:</strong>
		<%= comment.presentation %>
	</p>

	<p>
		<strong>Drug Administration:</strong>
		<%= comment.administration %>
	</p>

	<p>
		<strong>Patient Outcome:</strong>
		<%= comment.outcome %>
	</p>

	<p><%= link_to "Delete comment", [comment.drug, comment], method: :delete, data: { confirm: "Are you sure you want to delete this comment?"}, class: 'btn btn-danger' %>
	</p>
<% end %>